{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "target": "es2016",
    "module": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "ziggy-js": ["./vendor/tightenco/ziggy"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}

